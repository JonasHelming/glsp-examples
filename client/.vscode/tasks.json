{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build glsp-example/client packages",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "command": "yarn ",
      "problemMatcher": []
    },
    {
      "label": "Watch glsp-example/client packages",
      "type": "shell",
      "group": "build",
      "command": "yarn watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Workflow Standalone Example in Browser",
      "type": "shell",
      "group": "test",
      "command": "google-chrome workflow/workflow-standalone/app/diagram.html",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Workflow Example Backend (Theia)",
      "type": "shell",
      "group": "test",
      "command": "cd workflow/browser-app && yarn start:debug",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Simple Example Backend (Theia)",
      "type": "shell",
      "group": "test",
      "command": "cd simple/browser-app && yarn start:debug",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Java Example Servers",
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "../server"
      },
      "command": "mvn clean verify",
      "problemMatcher": []
    },
    {
      "label": "Start Workflow Example Server (Java)",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "command": "java -jar ../server/org.eclipse.glsp.example.workflow/target/org.eclipse.glsp.example.workflow-0.8.0-SNAPSHOT-glsp.jar",
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    },
    {
      "label": "Start Simple Example Server (Java)",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "command": "java -jar ../server/org.eclipse.glsp.example.simple/target/org.eclipse.glsp.example.simple-0.8.0-SNAPSHOT-glsp.jar",
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    }
  ]
}
